<UserControl x:Class="OscGuiControl.OscGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OscGui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
			<Label Name="NameLabel" Foreground="White" FontSize="20" FontWeight="Bold"/>
			<CheckBox Name="EditCheckbox" Content="Edit" Foreground="White" Margin="5"/>
			<Button Name="MergeButton" Content="Merge" Margin="5"/>
			<Button Name="SplitHButton" Content="Split H" Margin="5"/>
			<Button Name="SplitVButton" Content="Split V" Margin="5"/>
		</StackPanel>

		<Grid Grid.Row="1"  Name="UIGrid" Background="#1a1a1a">
			
		</Grid>	
    </Grid>
</UserControl>
